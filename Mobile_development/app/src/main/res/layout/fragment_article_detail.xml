<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFotoArtikel"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="380dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription= "Gambar Kucing"
            android:layout_gravity="center"
            tools:text="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvJudulArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/darker_green"
            tools:text="Nama Artikel"/>

        <TextView
            android:id="@+id/tvKategoriArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            tools:text="Kategori Artikel"/>

        <TextView
            android:id="@+id/tvTanggalArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/gray"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            tools:text="Tanggal Artikel"/>

        <TextView
            android:id="@+id/tvDeskripsiArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            tools:text="Deskripsi"
            android:textAlignment="viewStart"
            android:lineSpacingExtra="8dp"
            android:textSize="16sp"
            android:layout_marginBottom="22sp"/>
    </LinearLayout>
</ScrollView>
